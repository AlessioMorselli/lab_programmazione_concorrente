<% content_for :title do %>
<%= @user.name %> - Account
<% end %>

<% content_for :head do %>
<%= stylesheet_link_tag "dashboard" %>
<% end %>

<div class="row flex-shrink-0">
  <div class="col-12 d-md-none">
    <h3 class="text-center">
      <%= @user.name %>
    </h3>
  </div>
</div>
<div class="row flex-shrink-0 d-xl-none">

  <div class="col-12">
    <div class="btn-toolbar justify-content-center">
      <%= render "user_groups_modal" %>
    </div>
  </div>
</div>
<div class="row flex-grow-1 mt-2">

  <div class="col-12">
    <div class="card card-chat shadow rounded-0 h-100">
      <div class="card-header rounded-0 text-center font-075">Account</div>
      <div class="card-body p-2 d-flex justify-content-center">
        <div class="mb-2">

          <%= render partial: "user/form", locals: {user: @user, url: user_path(@user), class_name: "form-new-event" } %>
        </div>
      </div>
    </div>
  </div>
</div>
