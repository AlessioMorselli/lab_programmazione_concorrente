<% content_for :title do %>
Unife Study Groups - Password Dimenticata
<% end %>

<% content_for :head do %>
<%= stylesheet_link_tag "landing_page" %>
<%= stylesheet_link_tag "login_page" %>
<% end %>



<main role="main" class="inner cover">
  <div class="container h-100">
    <div class="row align-items-center align-self-center h-100 text-center flex-column">

      <%= render partial: "flash_messages" %>
      
      <%= form_for(:password_reset, url: password_resets_path, html: {class: 'form-signin', style: 'max-width: 500px'}) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal text-white">Password Reset</h1>
      <%= f.email_field :email, class: 'form-control rounded-0 truncate-string-100', placeholder: "Inserisci indirizzo email per il reset della password", required: true %>
      <%= f.submit "Invia", class: 'btn btn-lg btn-secondary btn-block rounded-0 shadow mt-2' %>
      <% end %>

    </div>
  </div>
</main>


