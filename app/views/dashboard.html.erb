<% content_for :title do %>
  <%= @group.name %> - Dashboard
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag "dashboard" %>

  <%= csrf_meta_tag %>
<% end %>


<div class="bg-light h-100">
  <%= render "nav" %>
  
  <div class="container-fluid main-container">
    <div class="row h-100">
      <div class="col-md-3 col-lg-3 col-xl-2 h-100 d-none d-md-block pl-2 py-2 pr-0">
        <%= render "user_groups" %>
      </div>
      <div class="col-md-9 col-lg-9 col-xl-10 h-100 p-2">
        <div class="container-fluid h-100 d-flex flex-column px-2 pb-2 pt-0">
          <div class="row flex-shrink-0 d-md-none">
            <div class="col-12">
              <h3 class="text-center">
                <%= @group.name %>
              </h3>
            </div>
          </div>
          <div class="row flex-shrink-0 d-xl-none">

            <div class="col-12">
              <div class="btn-toolbar justify-content-center">
                <%= render "user_groups_modal" %>

                <button class="btn btn-sm btn-outline-secondary dropdown-toggle shadow-sm" data-target="#boardModal" data-toggle="modal">
                  <span data-feather="bookmark"></span>
                  Bacheca
                </button>

                <div class="modal fade" tabindex="-1" role="dialog" id="boardModal">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content rounded-0">
                      <div class="modal-header">
                        <h5 class="modal-title">Bacheca</h5>
                        <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body modal-body-scroll">
                        <%= render "pinned" %>
                      </div>
                    </div>
                  </div>
                </div>

                <button class="btn btn-sm btn-outline-secondary dropdown-toggle shadow-sm" data-target="#calendarModal" data-toggle="modal">
                  <span data-feather="calendar"></span>
                  Calendario
                </button>

                <div class="modal fade" tabindex="-1" role="dialog" id="calendarModal">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content rounded-0">
                      <div class="modal-header">
                        <h5 class="modal-title">Calendario Eventi</h5>
                        <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <div class="container px-1">
                          <div class="calendar-modal-scroll">
                            <%= render "calendar" %>
                          </div>

                          <h6 class="sidebar-heading d-flex justify-content-between align-items-right px-3 mt-4 mb-1 text-muted">
                            <a class="d-flex align-items-center text-muted " href="/groups/<%= @group.uuid %>/events/new" style="font-size: 0.75rem; text-transform: uppercase;">
                              <span data-feather="plus-circle" class="mr-2"></span> Crea Nuovo Evento
                            </a>
                          </h6>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <button class="btn btn-sm btn-outline-secondary dropdown-toggle shadow-sm d-md-none" data-target="#membersModal" data-toggle="modal">
                  <span data-feather="user"></span>
                  Membri 
                </button>

                <div class="modal fade" tabindex="-1" role="dialog" id="membersModal">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content rounded-0">
                      <div class="modal-header">
                        <h5 class="modal-title">Membri di questo gruppo</h5>
                        <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <ul class="nav flex-column nav-scroll">
                        <% @group.members.each do |member| %>
                        <li class="nav-item">
                          <a class="nav-link text-secondary" href="#">
                            <span data-feather="user"></span>
                            <%= member.name %>
                          </a>
                        </li>
                        <% end %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row flex-grow-1 mt-2">
            <div class="col-12 col-xl-3 d-none d-xl-block pr-0">
              <div class="card card-chat shadow rounded-0 h-100">
                <div class="card-header rounded-0 text-center">Bacheca</div>
                <div class="card-body p-3">
                  <div class="mb-2">

                    <%= render "pinned" %>

                  </div>
                </div>
              </div>
            </div>

            <div class="col-12 col-xl-6">
              <div class="card card-chat shadow rounded-0 h-100">
                <div class="card-header rounded-0 text-center">Chat</div>
                <div class="card-body p-3">
                  <div id="messages" class="mb-2">

                    <% if @messages.to_a.size == 0 %>
                      <p class="p-2 text-center">Al momento non sono presenti messaggi.</p>
                    <% end %>

                    <% @messages.reverse_order.each do |message| %>
                      <% time = message.updated_at.strftime("%I:%M %p") %>
                      <% if message.updated_at.strftime("%d/%m/%Y").to_s.eql? Time.now.strftime("%d/%m/%Y").to_s %>
                        <% date = "Today" %>
                      <% elsif message.updated_at.strftime("%d/%m/%Y").to_s.eql? (Time.now - 1.days).strftime("%d/%m/%Y").to_s %>
                        <% date = "Yesterday" %>
                      <% else %>
                        <% date = message.updated_at.strftime("%B %-d") %>
                      <% end %>
                      <% if message.user_id == current_user.id %>
                        <div class="outgoing_msg my-3 msg">
                          <div class="sent_msg">
                            <p id="message_body" message-id="<%= message.id %>"><span><%= message.text %></span></p>
                            <span class="time_date"> <%= time %>    |    <%= date %> <%= (message.updated_at.to_s.eql? message.created_at.to_s) ? nil : "*" %>
                              <a class="edit_message text-secondary mx-1" message-id="<%= message.id %>" href="#"><span data-feather="edit"></span></a>
                              <a class="save_message mr-1 d-none text-success" message-id="<%= message.id %>" href="#"><span data-feather="save"></span></a>
                              <% if (message.pinned == false and @group.admins.include? current_user ) %>
                                <a class="bookmark_message text-secondary mr-1" message-id="<%= message.id %>" href="#"><span data-feather="bookmark"></span></a>
                              <% end %>
                              <a class="delete_message text-danger" message-id="<%= message.id %>" href="#"><span data-feather="trash"></span></a>
                            </span>
                            <% if !message.attachment.nil? %>
                            <a class="d-flex align-items-center mb-2" href="<%= group_message_attachment_download_path(group_uuid: @group.uuid, message_id: message.id, id: message.attachment.id) %>">
                              <span data-feather="paperclip" class="mr-2"></span> <%= message.attachment.name %>
                            </a>
                            <% end %>
                          </div>
                        </div>
                      <% else %>
                        <div class="received_msg ml-1 my-1 msg">
                          <div class="received_withd_msg">
                            <b><%= message.user.name %></b>:
                            <p class="mt-1"><%= message.text %></p>
                            <span class="time_date"> <%= time %>    |    <%= date %> <%= (message.updated_at.to_s.eql? message.created_at.to_s) ? nil : "*" %>  
                              <% if (message.pinned == false and @group.admins.include? current_user) %>
                                <a class="bookmark_message text-secondary" message-id="<%= message.id %>" href="#"><span data-feather="bookmark"></span></a>
                              <% end %>
                            </span>
                          </div>
                        </div>
                      <% end %>
                    <% end %>

                  </div>
                </div>
                <div class="type_msg">
                  <div class="container-fluid">
                    <div class="row">
                      <div class="col-8 px-1">
                        <div class="input_msg_write">
                          <input id="send_message" class="write_msg" placeholder="Scrivi un messaggio..." type="text">
                        </div>
                      </div>
                      <div class="col-4 px-1 text-right my-auto">
                        <input type="file" id="attachment" style="display: none">
                        <button id="attachment_button" class="msg_btn shadow-sm" type="button"><span data-feather="paperclip"></span></button>
                        <button id="send_button" class="msg_btn shadow-sm" type="button"><span data-feather="send"></span></button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-12 col-xl-3 d-none d-xl-block pl-0">
              <div class="card card-chat shadow rounded-0 h-100">
                <div class="card-header rounded-0 text-center">Calendario Eventi</div>
                <div class="card-body pt-0 pb-2 px-0" style="overflow-x: hidden;">
                  <div class="mb-2">

                    <div class="container px-2">

                      <%= render "calendar" %>

                    </div>

                    <% if (@group.admins.include? current_user) %>
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-right ml-2 p-2 mt-2 mb-1 text-muted add-group-sticky mx-0">
                      <div class="row">
                        <div class="col">
                          <a class="d-flex align-items-center text-muted nounderline mb-2" href="#">
                            <span data-feather="server" class="mr-2"></span> Mostra tutti gli Eventi 
                          </a>
                          <a class="d-flex align-items-center text-muted nounderline" href="/groups/<%= @group.uuid %>/events/new">
                            <span data-feather="plus-circle" class="mr-2"></span> Crea Nuovo Evento 
                          </a>
                        </div>
                      </div>
                    </h6>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

 </div>

<% content_for :scripts do %>

    <script type="text/javascript">
      $(document).ready(function (e){
       var groupItems = $('#groups li');
       groupItems.each(function(idx, li){
        var group = $(li);
        var name = group.find('a').clone().children().remove().end().text();
        if (name.trim() === "<%= @group.name %>"){
          group.find('a').addClass("active");
        }
      });

      $('#messages .msg:last-child').get(0).scrollIntoView();
     });
   </script>

