    <script type="text/javascript">
      $(document).ready(function (e){
       var groupItems = $('#groups li');
       groupItems.each(function(idx, li){
        var group = $(li);
        var name = group.find('a').clone().children().remove().end().text();
        if (name.trim() === "<%= @group.name %>"){
          group.find('a').addClass("active");
        }
      });

      $('#messages .msg:last-child').get(0).scrollIntoView();
     });
   </script>

   <script type="text/javascript">
    $(document).ready(function (e){
      $('#send_button').click(function (){
        var message_text = $('#send_message').val();
        var form_data = {message: {text: message_text, group_id: <%= @group.id %>, user_id: <%= current_user.id %>}};

        $.ajax({
          url: "<%= group_messages_path(group_uuid: @group.uuid) %>",
          type: "POST",
          data: form_data,
          headers: {
            'X-Transaction': 'POST Example',
            'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
          },
          success: function (data, text_status, jqXHR){
            //placeholder
            location.reload();
          },
          error: function (jqXHR, text_status, error_thrown){

          }
        });
      });
    });
   </script>

