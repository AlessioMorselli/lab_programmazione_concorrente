
<% content_for :title do %>
  <%= @group.name %> - Membri
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag "dashboard" %>

<% end %>

<div class="bg-light h-100">
  <%= render "nav" %>
  
  <div class="container-fluid main-container">
    <div class="row h-100">
      <div class="col-md-3 col-lg-2 col-xl-2 h-100 d-none d-md-block pl-2 py-2 pr-0">
        <%= render "user_groups" %>
      </div>
      <div class="col-md-9 col-lg-10 h-100 p-2">
        <div class="container-fluid h-100 d-flex flex-column px-2 pb-2 pt-0">
          <div class="row flex-shrink-0">
            <div class="col-12 d-md-none">
              <h3 class="text-center">
                <%= @group.name %>
              </h3>
            </div>
          </div>
          <div class="row flex-shrink-0 d-xl-none">

            <div class="col-12">
              <div class="btn-toolbar justify-content-center">
                <%= render "user_groups_modal" %>
              </div>
            </div>
          </div>
          <div class="row flex-grow-1 mt-2">

            <div class="col-12">
              <div class="card card-chat shadow rounded-0 h-100">
                <div class="card-header shadow rounded-0 text-center">Account</div>
                <div class="card-body p-2 justify-content-center">
                  <div class="mb-2">
                    <% id_num = 0 %>
                    <% @members.each do |membership| %>
                    <% if membership.user != current_user %>
                      <% id_num = id_num + 1 %>
                      <div class="card shadow-sm">
                        <div class="card-body group-name-body d-flex justify-content-between">
                          <a class="align-self-center text-secondary nounderline" href="#" data-toggle="modal" data-target="#infoModal<%= id_num %>">
                            <% if membership.user.id == @members.super_admin.first.id %>
                              <span class="text-success" data-feather="star"></span>&nbsp; <%= membership.user.name %>
                            <% elsif @members.admin.ids.include?(membership.user.id) %>
                              <span class="text-primary" data-feather="star"></span>&nbsp; <%= membership.user.name %>
                            <% else %>
                              <span data-feather="user"></span>&nbsp; <%= membership.user.name %>
                            <% end %>

                          </a>
                          <div class="text-secondary align-self-center ml-2"></div>
                          
                          <!-- SEZIONE VISIBILE SOLO DAL SUPER ADMIN -->
                          <% if current_user.id == @members.super_admin.first.id %>
                            <%= link_to(group_set_super_admin_path(@group.uuid, membership.user.id), class: "text-right col-1 nounderline text-success", data: {method: :patch, confirm: "Sicuro? Questa azione farà diventare #{membership.user.name} il nuovo super admin indiscusso del gruppo"}) do %>
                              <div title="Fai diventare nuovo super admin" ><span data-feather="chevrons-up"></span></div>
                            <% end %>
                            <% if membership.admin %>
                              <%= link_to(group_set_admin_path(@group.uuid, membership.user.id), class: "text-right col-1 nounderline text-warning", data: {method: :patch, confirm: "Sicuro? Questa azione rimuoverà il potere di admin all'utente #{membership.user.name}"}) do %>
                                <div title="Rimuovi dagli admins" ><span data-feather="chevron-down"></span></div>
                              <% end %>
                            <% else %>
                              <%= link_to(group_set_admin_path(@group.uuid, membership.user.id), class: "text-right col-1 nounderline text-primary", data: {method: :patch, confirm: "Sicuro? Questa azione darà il potere di admin all'utente #{membership.user.name}"}) do %>
                                <div title="Aggiungi agli admins" ><span  data-feather="chevron-up"></span></div>
                              <% end %>
                            <% end %>
                          <% end %>
                          <!-- SEZIONE VISIBILE SOLO DAGLI ADMIN -->
                          <% if (@members.admin.ids.include?(current_user.id) && !membership.admin) || current_user.id == @members.super_admin.first.id %>
                            <%= link_to(group_membership_path(@group.uuid, membership.user.id), class: "text-right col-1 nounderline text-danger", data: {method: :delete, confirm: "Sicuro? Questa azione rimuoverà #{membership.user.name} dal gruppo"}) do %>
                              <div title="Rimuovi questo utente dal gruppo" ><span data-feather="x"></span></div>
                            <% end %>
                          <% end %>
                          <!-- FINE -->

                        </div>
                      </div>

                      <div class="modal fade" id="infoModal<%= id_num %>" tabindex="-1" role="dialog" aria-labelledby="infoModal<%= id_num %>" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content rounded-0">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalCenterTitle"><%= membership.user.name %></h5>
                              <button type="button" class="close modal-close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div class="modal-body">
                              <b>Email:</b> <%= membership.user.email %><br>
                              <% if membership.user.student != nil %>
                                <b>Corso di studio:</b> <%= membership.user.student.degree.name%><br/>
                                <b>Anno:</b> <%= membership.user.student.year %>
                              <% end %>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                          </div>
                        </div>
                      </div>
                  <% end %>
                  <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
